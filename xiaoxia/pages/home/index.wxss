#box{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 51px;
  left: 0;
  box-sizing: border-box;
}
.bannerBox{
  width: 100%;
  overflow: hidden;
}
.bannerBox block{
  width: 100%;
  display: block;
}
.swiper-item{
  width: 100%;
}
.swiper-item image{
  display: inline-block;
  width: 100%;
}
.listBox{
  width: 100%;
  margin-top: 10px;
  background: #fff;
  padding: 0 3%;
}
.listBox .listBoxList{
  width: 46%;
  height: 268px;
  margin-right: 1%;
  float: left;
  position: relative;
}
.listBox .listBoxList image{
  display: inline-block;
  height: 136px;
  width: 100%;
}
.listBox .listBoxList .pruductName{
  width: 100%;
  font-size: 14px;
