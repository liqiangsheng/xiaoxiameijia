.footTab{
  width: 100%;
  height: 50px;
  border-top: 1px solid #C7C7C7;
  display: flex;
  position: absolute;
  left: 0;
  bottom: 0;
}
.footTab view{
  flex: 1;
  
}
.footTab view text{ 
  width:100%;
  display: inline-block;
  text-align: center;
  margin-top: 15px;
  border-left: 1px solid #C7C7C7;
  font-size: 16px;
}
