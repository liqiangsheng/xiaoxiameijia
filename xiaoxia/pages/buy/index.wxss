/* pages/buy/index.wxss */
.buyBox{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 50px;
  box-sizing: border-box;
  overflow-y: auto;
}
.buyBox .buyList{
  width: 100%;
  height: 100px;
  border-bottom: 1px solid #EDEDED;
  display: flex;
  padding: 10px;
}
.buyBox .buyList image{
  display: inline-block;
  width: 60px;
  height: 60px;
  margin-top: 10px;
}
.buyBox .buyList .buyName{
  flex: 1;
  padding: 10px;
  position: relative;
}
.buyBox .buyList .buyName view{
  display: block;
  font-size: 16px;
  line-height: 28px;
  width: 100%;
}
.buyBox .buyList .buyName view text{
  margin-left: 30px;
  font-size: 14px;
  color: #8B8B83;

}
.foot{
   width:100%;
   height: 50px;
   position: absolute;bottom: 0;
   left: 0;
   box-sizing: border-box;
   padding: 0 10px;
   background: #FFF0F5;
}
.foot view{
  font-size: 12px;
  line-height: 25px;
}
 .header{
  width: 100%;
  height: 300px;
  text-align: center;
  color: #7D9EC0;
  line-height: 300px;
  font-size: 14px;
  font-family: "微软雅黑"；
}
.buyBox .buyList .buyName .del{
  width: 60px;
  height: 36px;
  background: #EE7AE9;
  line-height: 36px;
  position: absolute;
  right: 20px;
  bottom: 20px;
  text-align: center;
  border-radius:4px; 
  color: #fff;
}